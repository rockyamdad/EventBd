{% extends '::base.html.twig' %}
{% block body %}
    <div class="main">
        <div class="container">
            <ul class="breadcrumb">
                <li><a href="{{ path('events_homepage') }}">Home</a></li>
                <li class="active"><a href="{{ path('fos_user_profile_show') }}">My Account Page</a></li>
            </ul>

            <div class="row margin-bottom-40">

                <div class="sidebar col-md-3 col-sm-3">
                    <ul class="list-group margin-bottom-25 sidebar-menu">
                        <li class="list-group-item clearfix"><a href="{{ path('vendor_profile_edit') }}"><i class="fa fa-angle-right"></i> Edit Account Information</a></li>
                        <li class="list-group-item clearfix"><a href="#"><i class="fa fa-angle-right"></i> Restore Password</a></li>
                        <li class="list-group-item clearfix"><a href="{{ path('vendor_profile') }}"><i class="fa fa-angle-right"></i> My account</a></li>
                    </ul>
                </div>

                <div class="col-md-9 col-sm-7">
                    <h1>My Account Page</h1><br>
                    {% for flashMessage in app.session.flashbag.get('message') %}
                        <div class="alert alert-success">
                            <button type="button" class="close" data-dismiss="alert" aria-hidden="false"></button>
                            <strong> {{ flashMessage }}</strong>
                        </div>
                    {% endfor %}
                    <div class="content-page">
                        <h3>My Account</h3><br>
                        <div class="form-group">
                            <label class="control-label">First Name: </label>
                            <strong>{{ vendor.user.firstname }}</strong>
                        </div>
                        <div class="form-group">
                            <label class="control-label">Last Name :</label>
                            <strong> {{ vendor.user.lastname }}</strong>
                        </div>
                        <div class="form-group">
                            <label class="control-label">Email :</label>
                            <strong> {{ vendor.user.email }}</strong>
                        </div>
                        <div class="form-group">
                            <label class="control-label">Company Name :</label>
                            <strong> {{ vendor.companyName }}</strong>
                        </div>
                        <div class="form-group">
                            <label class="control-label">Address :</label>
                            <strong> {{ vendor.address }}</strong>
                        </div>
                        <div class="form-group">
                            <label class="control-label">Phone :</label>
                            <strong> {{ vendor.phone }}</strong>
                        </div>
                        <hr>

                        <h3>My Orders</h3>
                        <ul>
                            <li><a href="#">View your order history</a></li>
                            <li><a href="#">Your Transactions</a></li>
                        </ul>
                    </div>
                </div>
                <!-- END CONTENT -->
            </div>
            <!-- END SIDEBAR & CONTENT -->
        </div>
    </div>
{% endblock %}