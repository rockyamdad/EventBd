{% extends '::base.html.twig' %}
{% form_theme form ':Form:eventbd_horizontal_layout.html.twig' %}
{% block body %}
    {% for flashMessage in app.session.flashbag.get('message') %}
        <div class="alert alert-success">
            <button type="button" class="close" data-dismiss="alert" aria-hidden="false"></button>
            <strong> {{ flashMessage }}</strong>
        </div>
    {% endfor %}
<div class="main">
    <div class="container">
        <ul class="breadcrumb">
            <li><a href="{{ path('events_homepage') }}">Home</a></li>
            <li class="active"><a href="{{ path('fos_user_profile_show') }}">My Account Page</a></li>
        </ul>

        <div class="row margin-bottom-40">

            <div class="sidebar col-md-3 col-sm-3">
                <ul class="list-group margin-bottom-25 sidebar-menu">
                    <li class="list-group-item clearfix"><a href="{{ path('user_profile') }}"><i class="fa fa-angle-right"></i> Edit Account Information</a></li>
                    <li class="list-group-item clearfix"><a href="{{ path('events_by_user') }}"><i class="fa fa-angle-right"></i>My Events</a></li>
                    <li class="list-group-item clearfix"><a href="{{ path('fos_user_profile_show') }}"><i class="fa fa-angle-right"></i> My account</a></li>
                    <li class="list-group-item clearfix"><a href="{{ path('user_password_change') }}"><i class="fa fa-angle-right"></i> Change Password</a></li>

                </ul>
            </div>
            <div class="profile-content">
                <div class="row">
                    <div class="col-md-8">
                        <div class="portlet light">
                            <div class="portlet-title tabbable-line">
                                <div class="caption caption-md">
                                    <i class="icon-globe theme-font hide"></i>
                                    <span class="caption-subject font-blue-madison bold uppercase">Profile Edit</span>
                                </div>

                            </div>
                            <div class="portlet-body">
                                <div class="tab-content">
                                    <!-- PERSONAL INFO TAB -->
                                        {{ form_start(form,{'attr':{'class':'form-horizontal','id':'form-create-user','name':'form-create-user','novalidate': 'novalidate'}}) }}
                                        {{ form_row(form.firstname) }}
                                        {{ form_row(form.lastname) }}
                                        {{ form_row(form.email) }}
                                        {{ form_row(form.gender) }}
                                        {{ form_row(form.cellphone) }}
                                        <div class="form-actions top">
                                            <div class="row">
                                                <div class="col-md-offset-3 col-md-9">
                                                    <input type="hidden" id="user_id" name="user_id" value="{{ form.vars.value.id }}">
                                                    {{ form_widget(form.save,{'attr':{'class':'btn green'}}) }}
                                                    <a href={{ "javascript:history.go(-1)" }}> {{ form_widget(form.cancel,{'attr':{'class':'btn default'}}) }}</a>
                                                </div>
                                            </div>
                                        </div>
                                        {{ form_end(form) }}
                                </div>
                                <!-- END PRIVACY SETTINGS TAB -->
                            </div>
                        </div>
                    </div>
                </div>
            </div>

        </div>

    </div>
</div>



{% endblock body %}
