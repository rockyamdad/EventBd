{% extends '::baseBackend.html.twig' %}

{% block stylesheets %}
    {{ parent() }}
    <!-- BEGIN PAGE LEVEL STYLES -->
    {% stylesheets filter='cssrewrite'
    'assets/global/plugins/bootstrap-select/bootstrap-select.min.css'
    %}
    <link rel="stylesheet" href="{{ asset_url }}" />
    {% endstylesheets %}
    <!-- END PAGE LEVEL STYLES -->

{% endblock %}
{% block body %}
    <h3 class="page-title">
        Users
    </h3>
    <div class="page-bar">
        <ul class="page-breadcrumb">
            <li>
                <i class="fa fa-home"></i>
                <a href="{{ path('event_dashboard') }}">Home</a>
                <i class="fa fa-angle-right"></i>
            </li>
            <li>
                <a href="{{ path('users_add') }}">Add User</a>
            </li>
        </ul>

    </div>

    <div class="portlet box blue-hoki">
        <div class="portlet-title">
            <div class="caption">
                <i class="fa fa-gift"></i>Add Users
            </div>
            <div class="tools">
                <a href="javascript:;" class="collapse">
                </a>
                <a href="javascript:;" class="reload">
                </a>
                <a href="javascript:;" class="remove">
                </a>
            </div>
        </div>
        <div class="portlet-body form">
            {{ form_start(form,{'attr':{'class':'form-horizontal','id':'form-create-user','name':'form-create-user','novalidate': 'novalidate'}}) }}
                <div class="form-body">
                    <div class="form-group">
                        <label class="col-md-3 control-label">First Name <span class="required">*</span></label>
                        <div class="col-md-4">
                            {{ form_widget(form.firstname,{'attr':{'class':'form-control'}}) }}
                        </div>
                    </div>
                    <div class="form-group">
                        <label class="col-md-3 control-label">Last Name <span class="required">*</span></label>
                        <div class="col-md-4">
                            {{ form_widget(form.lastname,{'attr':{'class':'form-control'}}) }}
                        </div>
                    </div>
                    <div class="form-group">
                        <label class="col-md-3 control-label">Gender <span class="required">*</span></label>
                        <div class=" col-md-4">
                            {{ form_widget(form.gender,{'attr':{'class':'bs-select form-control'}}) }}
                        </div>
                    </div>
                    <div class="form-group">
                        {{ form_label(form.cellphone,'Phone',{'label_attr': {'class':'col-md-3 control-label'}}) }}
                        <div class="col-md-4">
                            {{ form_widget(form.cellphone,{'attr':{'class':'form-control'}}) }}
                        </div>
                    </div>

                    <div class="form-group">
                        <label class="col-md-3 control-label">User Role <span class="required">*</span></label>
                        <div class=" col-md-4">
                            {{ form_widget(form.single_role,{'attr':{'class':'form-control'}}) }}
                        </div>
                    </div>
                    <div class="form-group">
                        <label for="{{ form.email.vars.id }}" class="col-md-3 control-label required">
                            Email <span class="required">*</span></label>
                        <div class="col-md-4">
                                {{ form_widget(form.email,{'attr':{'class':'form-control'}}) }}
                        </div>
                    </div>
                    <div class="form-group">
                        <label for="{{ form.plainPassword.first.vars.id }}" class="col-md-3 control-label">
                            Password <span class="required">*</span>
                        </label>
                        <div class="col-md-4">
                                {{ form_widget(form.plainPassword.first, {'attr': { 'class': 'form-control', 'data-required': '1', 'autocomplete' : 'off' , 'autofill' : 'off' }}) }}
                        </div>
                    </div>
                    <div class="form-group">
                        <label for="{{ form.plainPassword.second.vars.id }}" class="col-md-3 control-label">Confirm Password<span class="required">*</span></label>
                        <div class="col-md-4">
                                {{ form_widget(form.plainPassword.second,{'attr':{'class':'form-control', 'data-required': '1'}}) }}
                        </div>
                    </div>
                </div>
                <div class="form-actions top">
                    <div class="row">
                        <div class="col-md-offset-3 col-md-9">
                            {{ form_widget(form.save,{'attr':{'class':'btn green'}}) }}
                            <a href={{ "javascript:history.go(-1)" }}> {{ form_widget(form.cancel,{'attr':{'class':'btn default'}}) }}</a>
                        </div>
                    </div>
                </div>
                {{ form_end(form) }}
        </div>
    </div>

{% endblock %}

{% block javascriptBlock %}

    {{ parent() }}
    <!-- BEGIN PAGE LEVEL PLUGINS -->
    {% javascripts

    %}
    <script type="text/javascript" src="{{ asset_url }}"></script>

    {% endjavascripts %}
    <script type="text/javascript" src={{ asset('assets/global/plugins/bootstrap-select/bootstrap-select.min.js') }}></script>
    <!-- END GLOBAL JS -->
{% endblock javascriptBlock %}
