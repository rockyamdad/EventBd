    <div class="main">
        <div class="container">
            <!-- BEGIN SIDEBAR & CONTENT -->
            <div class="row">

                <div class="col-md-9 col-sm-9">

                    <div class="content-form-page signup-custom">
                        <div class="row">
                            <div class="col-md-7 col-sm-7" >
                                {{ form_start(form,{'attr':{'class':'form-horizontal','id':'form-create-user','name':'form-create-user','novalidate': 'novalidate'},"action":path('user_save')}) }}
                                <h1>Create an account</h1>
                                    <fieldset style="margin-left: 170px;width: 450px;">
                                        <div class="form-group">
                                            <label class="col-lg-4 control-label">First Name <span class="required">*</span></label>
                                            <div class="col-lg-8">
                                                {{ form_widget(form.firstname,{'attr':{'class':'form-control'}}) }}
                                            </div>

                                        </div>
                                        <div class="form-group">
                                            <label class="col-lg-4 control-label">Last Name <span class="required">*</span></label>
                                            <div class="col-lg-8">
                                                {{ form_widget(form.lastname,{'attr':{'class':'form-control'}}) }}
                                                <span style="color: red" class="help-block validation-style">{{form_errors(form.lastname,{'attr':{'class':'alert alert-danger'}}) }}</span>
                                            </div>
                                        </div>
                                        <div class="form-group">
                                            {{ form_label(form.cellphone,'Phone',{'label_attr': {'class':'col-lg-4 control-label'}}) }}
                                            <div class="col-lg-8">
                                                {{ form_widget(form.cellphone,{'attr':{'class':'form-control'}}) }}
                                            </div>
                                        </div>
                                        <div class="form-group">
                                            <label class="col-lg-4 control-label">Gender<span class="required">*</span></label>
                                            <div class=" col-lg-8">
                                                {{ form_widget(form.gender,{'attr':{'class':'bs-select form-control'}}) }}
                                            </div>
                                        </div>
                                        <div class="form-group">
                                            <label for="{{ form.email.vars.id }}" class="col-lg-4 control-label required">
                                                Email <span class="required">*</span>
                                            </label>
                                            <div class="col-lg-8 ">
                                                {{ form_widget(form.email,{'attr':{'class':'form-control '}}) }}
                                                <span class="help-block validation-style">{{form_errors(form.email,{'attr':{'class':'alert alert-danger'}}) }}</span>
                                            </div>

                                        </div>
                                    </fieldset>
                                    <fieldset style="margin-left: 170px;width: 450px;">
                                        <legend>Your password</legend>

                                        <div class="form-group">
                                            <label for="{{ form.plainPassword.first.vars.id }}" class="col-lg-4 control-label required">
                                                Password <span class="required">*</span>
                                            </label>
                                                <div class="col-lg-8" >
                                                    {{ form_widget(form.plainPassword.first, {'attr': { 'class': 'form-control', 'data-required': '1', 'autocomplete' : 'off' , 'autofill' : 'off' }}) }}
                                                </div>
                                        </div>

                                        <div class="form-group">
                                            <label for="{{ form.plainPassword.second.vars.id }}" class="col-lg-4 control-label required">
                                                Confirm Password <span class="required">*</span>
                                            </label>
                                                <div class="col-lg-8">
                                                    {{ form_widget(form.plainPassword.second, {'attr': { 'class': 'form-control', 'data-required': '1' }}) }}
                                                    <span style="color: red" class="help-block validation-style">{{form_errors(form.plainPassword,{'attr':{'class':'alert alert-danger'}}) }}</span>
                                                </div>
                                        </div>
                                        <div class="row">
                                            <div class="col-lg-8 col-md-offset-4 padding-left-0 padding-top-20">
                                                {{ form_widget(form.save, { 'attr': {'class': 'btn btn-primary'} }) }}
                                                <a href="{{ path('events_homepage') }}">
                                                    {{ form_widget(form.cancel, { 'attr': {'class': 'btn btn-default'} }) }}
                                                </a>
                                            </div>
                                        </div>

                                    </fieldset>



                                {{ form_end(form) }}

                            </div>

                        </div>
                    </div>
                </div>
                <!-- END CONTENT -->
            </div>
            <!-- END SIDEBAR & CONTENT -->
        </div>
    </div>
