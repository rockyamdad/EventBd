{% block body %}
<div class="main ">
    <div class="container">

        <!-- BEGIN SIDEBAR & CONTENT -->
        <div class="row margin-bottom-40 ">

            <div class="col-md-9 col-sm-9 login-page-error">
                <h1>Login</h1>

                <div class="content-form-page signup-custom">
                    <div class="row custom-view">
                        <div class="col-md-7 col-sm-7">
                            {% for flashMessage in app.session.flashbag.get('message') %}
                                <div class="alert alert-success">
                                    <button type="button" class="close" data-dismiss="alert" aria-hidden="false"></button>
                                    <strong> {{ flashMessage }}</strong>
                                </div>
                            {% endfor %}
                            <form action="{{ path("fos_user_security_check") }}" method="post" class="form-horizontal form-without-legend" novalidate="novalidate" id="login-form">
                                <input type="hidden" name="_csrf_token" value="{{ csrf_token }}"/>
                                {% if error %}
                                    <div class="alert alert-danger error-message-class">
                                        <button class="close" data-dismiss="alert"></button>
                                        {{ error.messageKey|trans(error.messageData, 'security') }}
                                        <span>Enter any username and password.</span>
                                    </div>
                                {% endif %}

                                <div class="form-group">
                                <label for="username"
                                       class="col-lg-4 control-label required">Email</label>
                                <div class="col-lg-8 ">
                                    <input type="text" id="username" name="_username" value="{{ last_username }}" required="required"
                                           class="form-control" autocomplete="off" placeholder="Email"/>
                                </div>
                            </div>
                            <div class="form-group">
                                <label for="password"
                                       class="col-lg-4 control-label required">Password</label>
                                <div class="col-lg-8">
                                    <input type="password" id="password" name="_password" required="required"
                                           class="form-control" autocomplete="off" placeholder="Password"/>
                                </div>
                            </div>
                               {# <div class="row">
                                    <div class="col-lg-8 col-md-offset-4 padding-left-0">
                                        <a href="page-forgotton-password.html">Forget Password?</a>
                                    </div>
                                </div>#}
                                <div class="row">
                                    <div class="col-lg-8 col-md-offset-4 padding-left-0 padding-top-20">
                                        <button type="submit" id="login" class="btn btn-primary">Login</button>
                                    </div>
                                </div>
                                <div class="row">
                                    <div class="col-lg-8 col-md-offset-4 padding-left-0 padding-top-10 padding-right-30">
                                        <hr>
                                        <div class="login-socio">
                                            <p class="text-muted">or login using:</p>
                                            <ul class="social-icons">
                                                <li><a href="#" data-original-title="facebook" class="facebook" title="facebook"></a></li>
                                                <li><a href="#" data-original-title="Twitter" class="twitter" title="Twitter"></a></li>
                                                <li><a href="#" data-original-title="Google Plus" class="googleplus" title="Google Plus"></a></li>
                                                <li><a href="#" data-original-title="Linkedin" class="linkedin" title="LinkedIn"></a></li>
                                            </ul>
                                        </div>
                                    </div>
                                </div>
                            </form>
                        </div>

                    </div>
                </div>
            </div>
            <!-- END CONTENT -->
        </div>
        <!-- END SIDEBAR & CONTENT -->
    </div>
</div>
{% endblock %}
