<div class="newsSection">
    {{ form_start(formNews,{'attr':{'class':'form-horizontal','id':'news_add_form'}}) }}
    {{ form_widget(formNews.event) }}
    <div class="portlet-body form" id="testt">

        <div class="form-body">
            <h4 style="margin-left: -13px"><strong>News</strong></h4>
            <div class="row">
                <table class="table table-striped table-bordered table-primary table-condensed" id="newsTable">
                    <thead>
                    <tr>
                        <th width="">Title</th>
                        <th width="">Type</th>
                        <th width="">Details</th>
                        <th width="">Action</th>
                    </tr>

                    </thead>
                    <tbody>

                    </tbody>
                    <tr class="clone_">
                        <td>{{ form_widget(formNews.title,{'attr':{'class':'form-control','placeholder':'Title'}}) }}</td>
                        <td>{{ form_widget(formNews.type,{'attr':{'class':'form-control','placeholder':'News type'}}) }}</td>
                        <td>{{ form_widget(formNews.details,{'attr':{'class':'form-control', 'rows':'2','style':'height:35px'}}) }}</td>
                        <td>{{ form_widget(formNews.addNews,{'attr':{'class':'btn blue','id':'saveNews','style':'width:127px'}}) }}</td>
                    </tr>
                </table>

            </div>
        </div>
    </div>
    <input type="hidden" id="newsList" value="{{ newsList|json_encode|default('') }}">
    {{ form_end(formNews) }}
</div>