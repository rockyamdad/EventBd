<div class="speakerSection">
    {{ form_start(formSpeaker,{'attr':{'class':'form-horizontal','id':'speaker_add_form'}}) }}
    {{ form_widget(formSpeaker.event) }}
    <div class="portlet-body form" id="testt">

        <div class="form-body">

            <h4 style="margin-left: -13px"><strong>Speaker</strong></h4>
            <div class="row">

                <table class="table table-striped table-bordered table-primary table-condensed" id="speakerTable">
                    <thead>
                    <tr>
                        <th width="">First Name</th>
                        <th width="">Last Name</th>
                        <th width="">Description</th>
                        <th width="">Choose Logo</th>
                        <th width="">Action</th>
                    </tr>

                    </thead>
                    <tbody>

                    </tbody>
                    <tr class="clone_">
                        <td>{{ form_widget(formSpeaker.firstName,{'attr':{'class':'form-control','placeholder':'First Name'}}) }}</td>
                        <td>{{ form_widget(formSpeaker.lastName,{'attr':{'class':'form-control','placeholder':'Last  Name'}}) }}</td>
                        <td>{{ form_widget(formSpeaker.description,{'attr':{'class':'form-control', 'rows':'2','style':'height:35px'}}) }}</td>
                        <td>
                            <div class="input-group">
                                <div class="fileinput fileinput-new"
                                     data-provides="fileinput">
                                    <div class="input-group input-large file-size-sponsor">
                                        <div class="form-control uneditable-input span3"
                                             data-trigger="fileinput">
                                            <i class="fa fa-file fileinput-exists"></i>&nbsp; <span
                                                    class="fileinput-filename">
                                                           </span>
                                        </div>
                                                                                           <span class="input-group-addon btn default btn-file">
                                                                                           <span class="fileinput-new">
                                                                                           Select file </span>
                                                                                           <span class="fileinput-exists">
                                                                                           Change </span>
                                                                                               {{ form_widget(formSpeaker.file) }}

                                                                                           </span>
                                        <a href="#"
                                           class="input-group-addon btn red fileinput-exists"
                                           data-dismiss="fileinput">
                                            Remove </a>
                                    </div>
                                </div>
                            </div>
                        </td>
                        <td>{{ form_widget(formSpeaker.addSpeaker,{'attr':{'class':'btn blue','id':'saveSpeaker'}}) }}</td>
                    </tr>
                </table>

            </div>

        </div>
    </div>
    <input type="hidden" id="speakerList" value="{{ speakerList|json_encode|default('') }}">
    {{ form_end(formSpeaker) }}

</div>