<div class="sponsorSection">
    {{ form_start(formSponsor,{'attr':{'class':'form-horizontal','id':'sponsor_add_form'}}) }}
    {{ form_widget(formSponsor.event) }}
    <div class="portlet-body form" id="testt">

        <div class="form-body">
            <h4 style="margin-left: -13px"><strong>Sponsor</strong></h4>
            <div class="row">
                <table class="table table-striped table-bordered table-primary table-condensed" id="sponsorTable">
                    <thead>
                    <tr>
                        <th width="">Name</th>
                        <th width="">Description</th>
                        <th width="">Choose Logo</th>
                        <th width="">Action</th>
                    </tr>
                    </thead>
                    <tbody>
                    {% if sponsorsList is defined %}
                        {% for sponsor in sponsorsList %}

                            <tr>
                                <td>{{ sponsor.name }}  </td>
                                <td>{{ sponsor.description }}  </td>
                                <td>
                                    <div class="product-item" style="background: none;padding: 0;width: 80px;"><div class="pi-img-wrapper" style="width: 80px;"> <img src="{{ asset('uploads/'~sponsor.path) }}" style="height: 50px;width: 80px;" class="img-responsive"> </div> </div>
                                </td>
                                <td> <input type="button"  id="deleteSponsor" style="width:127px;" value="delete" class="btn red deleteSponsor" rel={{ sponsor.id }} > </td>
                            </tr>

                        {% endfor %}

                    {% endif %}
                    </tbody>
                    <tr class="clone_">
                        <td>{{ form_widget(formSponsor.name,{'attr':{'class':'form-control','placeholder':'Sponsor Name'}}) }}</td>
                        <td>{{ form_widget(formSponsor.description,{'attr':{'class':'form-control', 'rows':'2','style':'height:35px'}}) }}</td>
                        <td>
                            <div class="input-group">
                                <div class="fileinput fileinput-new"
                                     data-provides="fileinput">
                                    <div class="input-group input-large file-size-sponsor">
                                        <div class="form-control uneditable-input span3"
                                             data-trigger="fileinput">
                                            <i class="fa fa-file fileinput-exists"></i>&nbsp; <span
                                                    class="fileinput-filename">
                                                           </span>
                                        </div>
                                                                                           <span class="input-group-addon btn default btn-file">
                                                                                           <span class="fileinput-new">
                                                                                           Select file </span>
                                                                                           <span class="fileinput-exists">
                                                                                           Change </span>
                                                                                               {{ form_widget(formSponsor.file) }}

                                                                                           </span>
                                        <a href="#"
                                           class="input-group-addon btn red fileinput-exists"
                                           data-dismiss="fileinput">
                                            Remove </a>
                                    </div>
                                </div>
                            </div>
                        </td>
                        <td>{{ form_widget(formSponsor.addSponsor,{'attr':{'class':'btn blue','id':'saveSponsor'}}) }}</td>
                    </tr>
                </table>

            </div>
        </div>
    </div>

    {{ form_end(formSponsor) }}

</div>