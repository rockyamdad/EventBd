{{ form_start(form,{'attr':{'class':'form-horizontal','id':'event_add_form','novalidate': 'novalidate'}}) }}
<div class="form-group ">
    <label class="col-md-3 control-label">Event Name</label>

    <div class="col-md-7">
        {{ form_widget(form.name,{'attr':{'class':'form-control','placeholder':'Give a short Name'}}) }}
    </div>
</div>
<div class="form-group">
    <label class="col-md-3 control-label">Event Type</label>
    <div class="col-md-7">
        {{ form_widget(form.group,{'attr':{'class':'select2me form-control'}}) }}
    </div>
</div>

<div class="form-group ">
    <label class="col-md-3 control-label">Event Tags</label>

    <div class="col-md-7">
        {{ form_widget(form.tags,{'attr':{'class':'form-control','placeholder':'Give tags Name'}}) }}
    </div>
</div>

<div style="clear: both"></div>

<div class="form-group ">
    <label class="col-md-3 control-label">Contact </label>
    <div class="col-md-7">
        {{ form_widget(form.contact,{'attr':{'class':'form-control', 'rows':'6'}}) }}
    </div>
</div>
<div class="form-group ">
    <label class="col-md-3 control-label">Choose Logo</label>

    <div class="col-md-7">
        <div class="fileinput fileinput-new" data-provides="fileinput">
            <div class="input-group input-large file-size">
                <div class="form-control uneditable-input span3"
                     data-trigger="fileinput">
                    <i class="fa fa-file fileinput-exists"></i>&nbsp;
                    {#{{ path|default() }}#}
                    <span
                            class="fileinput-filename">
                                                           </span>
                </div>
                                                       <span class="input-group-addon btn default btn-file">
                                                       <span class="fileinput-new">
                                                       Select file </span>
                                                       <span class="fileinput-exists">
                                                       Change </span>

                                                           {{ form_widget(form.file) }}

                                                       </span>
                <a href="#"
                   class="input-group-addon btn red fileinput-exists"
                   data-dismiss="fileinput">
                    Remove </a>
            </div>
        </div>
    </div>
</div>

<div class="form-group ">
    <label class="col-md-3 control-label">FaceBook Page Link</label>

    <div class="col-md-7">
        {{ form_widget(form.facebookPageLink,{'attr':{'class':'form-control','placeholder':'Give a FaceBook Page Link'}}) }}

    </div>
</div>
<div class="form-group ">
    <label class="col-md-3 control-label">Google+ Page Link</label>

    <div class="col-md-7">
        {{ form_widget(form.googlePlusPageLink,{'attr':{'class':'form-control','placeholder':'Give a Google+ Page Link'}}) }}
    </div>
</div>
<div class="form-group ">
    <label class="col-md-3 control-label">Linkedin Link</label>

    <div class="col-md-7">
        {{ form_widget(form.linkedinLink,{'attr':{'class':'form-control','placeholder':'Give a Linkedin Link'}}) }}
    </div>
</div>
<div class="form-group ">
    <label class="col-md-3 control-label">Event Description </label>

    <div class="col-md-7">
        {{ form_widget(form.description,{'attr':{'class':'form-control wysihtml5', 'rows':'6'}}) }}
    </div>
</div>
<div class="form-group">
    <label class="control-label col-md-3">Privacy</label>
    <div class="col-md-7">
        {{ form_widget(form.privacy,{'attr':{'class':'form-control select2me'}}) }}
    </div>
</div>
{#<input type="hidden" id="eventId" name="eventId">#}
        {{ form_widget(form.id) }}
<div class="form-actions">
    <div class="row">
        <div class="col-md-offset-3 col-md-9">
            <a href="javascript:;">
                {{ form_widget(form.save,{'attr':{'class':'btn blue  generalInformation'}}) }}
            </a>

        </div>
    </div>

</div>
{{ form_end(form) }}