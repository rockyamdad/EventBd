{% extends '::baseBackend.html.twig' %}
{#{% form_theme form ':Form:eventbd_horizontal_layout.html.twig' %}#}
{% block stylesheets %}
    {{ parent() }}
    <!-- BEGIN PAGE LEVEL STYLES -->
    {% stylesheets filter='cssrewrite'

    'assets/global/plugins/bootstrap-fileinput/bootstrap-fileinput.css'
    'assets/admin/layout2/css/layout.css'

    %}
    <link rel="stylesheet" href="{{ asset_url }}"/>
    {% endstylesheets %}
    <!-- END PAGE LEVEL STYLES -->

{% endblock %}
{% block body %}

    <h3 class="page-title">
        Events Group
    </h3>
    <div class="page-bar">
        <ul class="page-breadcrumb">
            <li>
                <i class="fa fa-home"></i>
                <a href="{{ path('event_dashboard') }}">Home</a>
                <i class="fa fa-angle-right"></i>
            </li>
            <li>
                <a href="{{ path('event_group_create') }}">Add Event Group</a>
            </li>
        </ul>

    </div>

    <div class="portlet box blue-hoki">
        <div class="portlet-title">
            <div class="caption">
                <i class="fa fa-gift"></i>Add Event Group
            </div>
            <div class="tools">
                <a href="javascript:;" class="collapse">
                </a>
                <a href="javascript:;" class="reload">
                </a>
                <a href="javascript:;" class="remove">
                </a>
            </div>
        </div>
        <div class="portlet-body form">
            {{ form_start(form,{'attr':{'class':'form-horizontal'}}) }}
            <div class="form-body">
                <div class="form-group">
                    {{ form_label(form.name, 'Name :', {'label_attr': {'class': 'control-label col-md-2'} }
                    ) }}
                    <div class="col-md-4">
                        <div class="input-icon">
                            {{ form_widget(form.name, { 'attr': {'class': 'form-control col-md-4', 'style': 'padding-left: 10px !important;'} }) }}
                        </div>
                        <span class="help-block" style="color:darkred;margin-left:-40px;">{{ form_errors(form.name) }}</span>
                    </div>

                </div>
            <div class="form-group ">
                    {{ form_label(form.file, 'File :', {'label_attr': {'class': 'control-label col-md-2'} }
                    ) }}

                    <div class="col-md-7">
                        <div class="fileinput fileinput-new" data-provides="fileinput">
                            <div class="input-group input-large file-size">
                                <div class="form-control uneditable-input span3"
                                     data-trigger="fileinput">
                                    <i class="fa fa-file fileinput-exists"></i>&nbsp;
                                    {#{{ path|default() }}#}
                                    <span
                                            class="fileinput-filename">
                                                           </span>
                                </div>
                                                       <span class="input-group-addon btn default btn-file">
                                                       <span class="fileinput-new">
                                                       Select file </span>
                                                       <span class="fileinput-exists">
                                                       Change </span>

                                                           {{ form_widget(form.file) }}

                                                       </span>
                                <a href="#"
                                   class="input-group-addon btn red fileinput-exists"
                                   data-dismiss="fileinput">
                                    Remove </a>
                            </div>
                        </div>
                    </div>
                </div>
            <div class="form-actions top">
                <div class="row">
                    <div class="col-md-offset-3 col-md-9">
                        {{ form_widget(form.save,{'attr':{'class':'btn green'}}) }}
                        <a href={{ "javascript:history.go(-1)" }}> {{ form_widget(form.cancel,{'attr':{'class':'btn default'}}) }}</a>
                    </div>
                </div>
            </div>
            {{ form_end(form) }}
        </div>
    </div>
    </div>

{% endblock %}

{% block javascriptBlock %}

    {{ parent() }}
    <!-- BEGIN PAGE LEVEL PLUGINS -->
    {% javascripts
    'assets/global/plugins/bootstrap-fileinput/bootstrap-fileinput.js'
    %}
    <script type="text/javascript" src="{{ asset_url }}"></script>

    {% endjavascripts %}
    <script type="text/javascript" src={{ asset('assets/global/plugins/bootstrap-select/bootstrap-select.min.js') }}></script>
    <!-- END GLOBAL JS -->
{% endblock javascriptBlock %}
 {% block documentReady %}

     {{ parent() }}

     $('.bs-select').selectpicker({
     iconBase: 'fa',
     tickIcon: 'fa-check'
     });

 {% endblock %}