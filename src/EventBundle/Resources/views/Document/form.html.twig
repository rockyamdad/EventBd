{% extends '::baseBackend.html.twig' %}
{#{% form_theme form ':Form:eventbd_horizontal_layout.html.twig' %}#}

{% block stylesheets %}
    {{ parent() }}
    <!-- BEGIN PAGE LEVEL STYLES -->
    {% stylesheets filter='cssrewrite'

    'assets/global/plugins/bootstrap-fileinput/bootstrap-fileinput.css'
    'assets/admin/layout2/css/layout.css'

    %}
    <link rel="stylesheet" href="{{ asset_url }}"/>
    {% endstylesheets %}
    <!-- END PAGE LEVEL STYLES -->

{% endblock %}
{% block body %}
    <h3 class="page-title">
        Documents Uploads
    </h3>
    <div class="page-bar">
        <ul class="page-breadcrumb">
            <li>
                <i class="fa fa-home"></i>
                <a href="{{ path('event_dashboard') }}">Home</a>
                <i class="fa fa-angle-right"></i>
            </li>
            <li>
                <a href="{{ path('document_add') }}">Add Document</a>
            </li>
        </ul>

    </div>

    <div class="portlet box blue-hoki">
        <div class="portlet-title">
            <div class="caption">
                <i class="fa fa-gift"></i>Add Document
            </div>
            <div class="tools">
                <a href="javascript:;" class="collapse">
                </a>
                <a href="javascript:;" class="reload">
                </a>
                <a href="javascript:;" class="remove">
                </a>
            </div>
        </div>
        <div class="portlet-body form">
            {{ form_start(form,{'attr':{'class':'form-horizontal','id':'document_form','novalidate':'novalidate'}}) }}
            <div class="form-body">
                <div class="form-group">
                    {{ form_label(form.title, 'Title :', {'label_attr': {'class': 'control-label col-md-2'} }
                    ) }}
                    <div class="col-md-6">
                        <div class="input-icon">
                            {{ form_widget(form.title, { 'attr': {'class': 'form-control col-md-4', 'style': 'padding-left: 10px !important;'} }) }}
                        </div>

                    </div>

                </div>
                <div class="form-group">
                    {{ form_label(form.description, 'Description :', {'label_attr': {'class': 'control-label col-md-2'} }
                    ) }}
                    <div class="col-md-6">
                        <div class="input-icon">
                            {{ form_widget(form.description, { 'attr': {'class': 'form-control col-md-4', 'style': 'padding-left: 10px !important;'} }) }}
                        </div>

                    </div>
                </div>
                <div class="form-group ">
                    {{ form_label(form.file, 'File :', {'label_attr': {'class': 'control-label col-md-2'} }
                    ) }}

                    <div class="col-md-6">
                        <div class="fileinput fileinput-new" data-provides="fileinput">
                            <div class="input-group  file-size">
                                <div class="form-control uneditable-input span3"
                                     data-trigger="fileinput">
                                    <i class="fa fa-file fileinput-exists"></i>&nbsp;
                                    {#{{ path|default() }}#}
                                    <span
                                            class="fileinput-filename">
                                                           </span>
                                </div>
                                                       <span class="input-group-addon btn default btn-file">
                                                       <span class="fileinput-new">
                                                       Select file </span>
                                                       <span class="fileinput-exists">
                                                       Change </span>

                                                           {{ form_widget(form.file) }}

                                                       </span>
                                <a href="#"
                                   class="input-group-addon btn red fileinput-exists"
                                   data-dismiss="fileinput">
                                    Remove </a>
                            </div>
                        </div>
                        <span class="help-inline" id="document_file-error"></span>
                    </div>
                </div>
                <div class="form-actions top">
                    <div class="row">
                        <div class="col-md-offset-3 col-md-9">
                            {{ form_widget(form.save,{'attr':{'class':'btn green'}}) }}
                            <a href={{ path('document_add') }}> {{ form_widget(form.cancel,{'attr':{'class':'btn default'}}) }}</a>
                        </div>
                    </div>
                </div>
                {{ form_end(form) }}
            </div>
        </div>
    </div>

{% endblock %}

{% block javascriptBlock %}

    {{ parent() }}
    <!-- BEGIN PAGE LEVEL PLUGINS -->
    {% javascripts
    'assets/global/plugins/bootstrap-fileinput/bootstrap-fileinput.js'
    '@EventBundle/Resources/public/js/events.js'
    %}
    <script type="text/javascript" src="{{ asset_url }}"></script>

    {% endjavascripts %}
    <script type="text/javascript" src={{ asset('assets/global/plugins/bootstrap-select/bootstrap-select.min.js') }}></script>
    <!-- END GLOBAL JS -->
{% endblock javascriptBlock %}
 {% block documentReady %}

     {{ parent() }}

     $('.bs-select').selectpicker({
     iconBase: 'fa',
     tickIcon: 'fa-check'
     });

 {% endblock %}